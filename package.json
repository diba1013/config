{
	"name": "@diba1013/config",
	"version": "0.2.0",
	"description": "The missing linter/formatter config for personal use",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/diba1013/config.git"
	},
	"author": "diba1013",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"change": "pnpm version --workspaces ${npm_config_tag} && git add **/package.json; pnpm version --include-workspace-root --force ${npm_config_tag}"
	},
	"workspaces": [
		"packages/**"
	],
	"dependencies": {
		"eslint": "^8.18.0",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"stylelint": "^14.9.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.2",
		"@commitlint/config-conventional": "^17.0.2",
		"@diba1013/eslint-config": "workspace:*",
		"@diba1013/prettier-config": "workspace:*",
		"lint-staged": "^13.0.2",
		"typescript": "^4.7.4"
	}
}
