{
	"name": "@diba1013/config",
	"version": "0.3.0",
	"description": "The missing linter/formatter config for personal use",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/diba1013/config.git"
	},
	"author": "diba1013",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"change": "pnpm version --workspaces ${npm_config_tag} && git add **/package.json; pnpm version --include-workspace-root --force ${npm_config_tag}"
	},
	"workspaces": [
		"packages/**"
	],
	"dependencies": {
		"eslint": "^8.23.0",
		"husky": "^8.0.1",
		"prettier": "^2.7.1",
		"stylelint": "^14.11.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.1",
		"@commitlint/config-conventional": "^17.1.0",
		"@diba1013/eslint-config": "workspace:*",
		"@diba1013/prettier-config": "workspace:*",
		"@types/node": "^18.7.13",
		"lint-staged": "^13.0.3",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.2"
	}
}
