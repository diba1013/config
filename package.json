{
	"name": "@diba1013/config",
	"version": "0.7.3",
	"description": "The missing linter/formatter config for personal use",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/diba1013/config.git"
	},
	"author": "diba1013",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"change": "pnpm changeset version; git add **/package.json ./.changeset/*.md; pnpm version --include-workspace-root --force ${npm_config_tag}"
	},
	"workspaces": [
		"packages/**"
	],
	"dependencies": {
		"eslint": "^8.44.0",
		"husky": "^8.0.3",
		"prettier": "^3.0.0",
		"stylelint": "^15.10.1"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@commitlint/cli": "^17.6.6",
		"@commitlint/config-conventional": "^17.6.6",
		"@diba1013/eslint-config": "workspace:*",
		"@diba1013/prettier-config": "workspace:*",
		"@types/node": "^20.4.0",
		"lint-staged": "^13.2.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	}
}
