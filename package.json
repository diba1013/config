{
	"name": "@diba1013/config",
	"version": "0.9.1",
	"description": "The missing linter/formatter config for personal use",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/diba1013/config.git"
	},
	"author": "diba1013",
	"engines": {
		"node": ">=20",
		"pnpm": ">=8"
	},
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"change": "pnpm changeset version; git add **/package.json; pnpm version --include-workspace-root --force ${npm_config_tag}"
	},
	"workspaces": [
		"packages/**"
	],
	"dependencies": {
		"eslint": "^8.50.0",
		"husky": "^8.0.3",
		"prettier": "^3.0.3",
		"stylelint": "^15.10.3"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@diba1013/eslint-config": "workspace:*",
		"@diba1013/prettier-config": "workspace:*",
		"@types/node": "^20.8.2",
		"lint-staged": "^14.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
