{
	"name": "@diba1013/config",
	"version": "0.4.0",
	"description": "The missing linter/formatter config for personal use",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/diba1013/config.git"
	},
	"author": "diba1013",
	"type": "module",
	"scripts": {
		"prepare": "husky install",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"change": "pnpm version --workspaces ${npm_config_tag}; git add **/package.json; pnpm version --include-workspace-root --force ${npm_config_tag}"
	},
	"workspaces": [
		"packages/**"
	],
	"dependencies": {
		"eslint": "^8.38.0",
		"husky": "^8.0.3",
		"prettier": "^2.8.7",
		"stylelint": "^15.4.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.1",
		"@commitlint/cli": "^17.6.1",
		"@commitlint/config-conventional": "^17.6.1",
		"@diba1013/eslint-config": "workspace:*",
		"@diba1013/prettier-config": "workspace:*",
		"@types/node": "^18.15.11",
		"lint-staged": "^13.2.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	}
}
